<!DOCTYPE html>
<html>
<head>
    <title>Productos en Tiempo Real</title>
</head>
<body>
    <h1>Lista de Productos en Tiempo Real</h1>
    <ul id="productos-lista">
        {{#each productos}}
         <div>
    <h3>{{this.name}}</h3>
    <p>Precio: ${{this.price}}</p>
    <p>Categor√≠a: {{this.category}}</p>
    <a href="/products/{{this._id}}">Detalles</a>
    <form action="/carts/{{cartId}}/products/{{this._id}}" method="post">
      <button type="submit">Agregar al Carrito</button>
    </form>
  </div>
            <li>{{this.nombre}} - {{this.precio}}</li>
        {{/each}}
    </ul>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        
        
        
        socket.on('productos', (products) => {
            const lista = document.getElementById('productos-lista');
            lista.innerHTML = productos.map(producto => `<li>${producto.nombre} - ${producto.precio}</li>`).join('');
        });
    </script>
</body>
</html>